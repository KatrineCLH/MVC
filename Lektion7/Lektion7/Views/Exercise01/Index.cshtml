@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>@ViewBag.Title</h1>
    <div>
        @using (Html.BeginForm("Index", "Exercise01", FormMethod.Get))
        {
            @Html.DropDownList("Countries")
            <button type="submit"> Show country code </button>
        }
        @if (ViewBag.CountryCode != null)
        {
            <div><p><strong>Country code: </strong>@ViewBag.CountryCode</p></div>
        }
       

    </div>
</body>
</html>
